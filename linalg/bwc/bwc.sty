\newcount\dccount@nj
\newcount\dccount@nt
\newcount\dccount@vj
\newcount\dccount@vt
\newdimen\dcdim@dj
\newdimen\dcdim@dt
\newdimen\dcdim@Dx
\newdimen\dcdim@Dy
\newdimen\@tempdima

\def\main{%
\divide\dcdim@dj by \dccount@nj\relax
\dcdim@dt=\dcdim@dj\divide\dcdim@dt by \dccount@nt\relax
\@tempdima=0pt
\dccount@vj=0\relax
\loop\ifnum\dccount@vj<\dccount@nj\relax
    \bob{\@tempdima}{linewidth=2pt}%
    {%
    \dccount@vt=0\loop\ifnum\dccount@vt<\dccount@nt\relax
        \global\advance\@tempdima\dcdim@dt
        \bob{\@tempdima}{linewidth=1pt,linestyle=dotted}%
        \advance\dccount@vt by 1\relax
    \repeat
    \relax
    }%
    \advance\dccount@vj by 1\relax
\repeat
\relax
\bob{\@tempdima}{linewidth=2pt}%
}

\def\bwcsketch#1#2x#3,#4x#5{%
\dcdim@Dx=#1\relax
\dcdim@Dy=#1\relax
\begin{pspicture}(\dcdim@Dx,\dcdim@Dy)

\def\bob##1##2{\psline[##2](0,##1)(\dcdim@Dx,##1)}
\dccount@nj=#2\dccount@nt=#4\dcdim@dj=\dcdim@Dy\main

\def\bob##1##2{\psline[##2](##1,0)(##1,\dcdim@Dy)}
\dccount@nj=#3\dccount@nt=#5\dcdim@dj=\dcdim@Dy\main\dcdim@dj=\dcdim@Dx\main

\psline(0,\dcdim@Dy)(\dcdim@Dx,0)
\end{pspicture}
\bigskip
}
